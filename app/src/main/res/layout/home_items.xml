<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_visa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/image_card"
        app:layout_constraintTop_toTopOf="@id/image_card"
        tools:text="Funalo de tal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/image_card"
        app:layout_constraintEnd_toEndOf="@id/image_card"
        tools:text="•••• •••• •••• 8765" />

    <Button
        android:id="@+id/button_card_detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_card"
        tools:text="Show Details" />

    <TextView
        android:id="@+id/text_balance_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_card_detail"
        tools:text="My Balance" />

    <TextView
        android:id="@+id/text_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_balance_title"
        tools:text="Balance available" />

    <TextView
        android:id="@+id/text_balance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_balance_label"
        tools:text="$ 50.000,00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_balance_value"
        tools:text="Show Statement" />


</androidx.constraintlayout.widget.ConstraintLayout>